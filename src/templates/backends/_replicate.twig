{% import '_includes/forms.twig' as forms %}

{{ forms.hidden({
    name: 'type',
    value: 'markhuot\\craftai\\backends\\Replicate'
}) }}

{{ forms.autosuggestField({
    first: true,
    label: 'Base URL',
    name: 'settings[baseUrl]',
    value: old('settings.baseUrl', backend.settings.baseUrl|default('')),
    errors: [craft.app.session.getFlash('error.settings.baseUrl')]|filter,
    suggestEnvVars: true,
}) }}

{{ forms.autosuggestField({
    first: true,
    label: 'API Key',
    name: 'settings[token]',
    value: old('settings.token', backend.settings.token|default('')),
    errors: [craft.app.session.getFlash('error.settings.token')]|filter,
    suggestEnvVars: true,
}) }}
